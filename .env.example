# Subscription Tier (free or premium)
SUBSCRIPTION_TIER=free

# ============================================================
# FREE TIER MODELS (at least one required for free tier)
# ============================================================

# Groq - Fast inference with Llama models
GROQ_API_KEY=your_groq_api_key_here

# Google Gemini Flash - Free tier with good quality
GEMINI_API_KEY=your_gemini_api_key_here

# DeepSeek - Chinese LLM with good performance
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# ============================================================
# PREMIUM TIER MODELS (required for premium tier)
# ============================================================

# OpenAI GPT-4 - Best quality, paid
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude 3.5 - High quality, paid
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================================
# SEARCH ENGINE APIs - Multi-Source Search System
# ============================================================

# FREE TIER SEARCH (2,000 requests/month free)
BRAVE_API_KEY=your_brave_api_key_here

# FREE TIER SEARCH (1,000 requests/month free)
EXA_API_KEY=your_exa_api_key_here

# DuckDuckGo (unlimited, no key needed)
# Wikipedia (unlimited, no key needed)

# PREMIUM TIER SEARCH
SERPAPI_KEY=your_serpapi_key_here
GOOGLE_CSE_API_KEY=your_google_cse_api_key_here
GOOGLE_CSE_CX=your_google_cse_cx_here

# ============================================================
# SECURITY & AUTHENTICATION
# ============================================================

# JWT Secret (auto-generated if not provided)
JWT_SECRET_KEY=your_secure_random_secret_here

# Session expiry in days
SESSION_EXPIRY_DAYS=7

# ============================================================
# USAGE LIMITS
# ============================================================

# Free tier daily limit
FREE_TIER_DAILY_LIMIT=5

# Premium tier (unlimited)
PREMIUM_TIER_DAILY_LIMIT=999999

# ============================================================
# APPLICATION SETTINGS
# ============================================================

MAX_SEARCH_RESULTS=10
MAX_RETRIES=3
TIMEOUT_SECONDS=30

# Research modes
QUICK_MODE_SOURCES=2
STANDARD_MODE_SOURCES=5
DEEP_MODE_SOURCES=15

# ============================================================
# OUTPUT SETTINGS
# ============================================================

OUTPUT_DIR=./outputs
REPORTS_DIR=./reports
LOGS_DIR=./logs
EXPORTS_DIR=./exports
CACHE_DIR=./cache

# ============================================================
# DATABASE
# ============================================================

DATABASE_PATH=./data/users.db

# ============================================================
# PERFORMANCE OPTIMIZATION
# ============================================================

# Enable caching for popular queries
ENABLE_CACHE=true
CACHE_TTL_HOURS=24

# Parallel processing
MAX_CONCURRENT_REQUESTS=5
